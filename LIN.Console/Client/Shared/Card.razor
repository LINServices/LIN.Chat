@code
{

    [Parameter]
    public string Titulo { get; set; } = "";

    [Parameter]
    public EventCallback<MouseEventArgs> Clicked { get; set; }

    [Parameter]
    public string Descripcion { get; set; } = "";

    [Parameter]
    public string Src { get; set; } = "";

}

<style>
    .div-shadow {
        box-shadow: rgba(0, 0, 0, 0.03) 0px 6px 24px 0px, rgba(0, 0, 0, 0.05) 0px 0px 0px 1px;
        border-radius: 6px;
        background-color: white;
    }

        .div-shadow:hover {
            box-shadow: rgba(63, 131, 248, 0.2) 0px 6px 24px 0px, rgba(63, 131, 248, 0.2) 0px 0px 0px 1px;
        }

</style>




<div @onclick="()=>Clicked.InvokeAsync()" style="padding: 12px;" class="horizontal gilroy mt-2 div-shadow">

    <div class="flex flex-row items-center">

        <img src="@Src" style="height: 30px; width: 30px;" />

        <div class="flex flex-col ml-2">

            <h1 style="margin-top: 0px;" class="gilroy-bold">@Titulo</h1>
            <h4 style="margin-top: -5px; font-size: 11px;">@Descripcion</h4>

        </div>

        <div @onclick:stopPropagation="true" class="ml-auto flex justify-center items-center mr-2">

         
        </div>



    </div>

</div>

