

@code{


    [Parameter]
    public RenderFragment ChildContent { get; set; }


    [Parameter]
    public string Name { get; set; } = "";

   
    public static async void Show(string name, string with, string close = "")
    {
        await App.JS.InvokeVoidAsync("OpenDropDown", "DR-"+name, with, close);
    }


}





<!-- Dropdown menu -->
<div id="DR-@Name" class="z-10 ring-1 ring-gray-300 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-60 dark:bg-gray-700 dark:divide-gray-600" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="top" style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(522.5px, 6119.5px, 0px);">
    <div class="flex flex-col justify-center items-center p-4">
    @ChildContent
    </div>
</div>

