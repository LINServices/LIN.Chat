@inject IJSRuntime JS


@code {



    [Parameter]
    public EventCallback<MouseEventArgs> OnSuccessCreate { get; set; }



    private string CreateProfileMessage = "";


    private string BindNameProfile = "";



    public string KeyName { get; set; } = "";
}



<div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-md max-h-full">

        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow">
            <button id="aut-close" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-modal-hide="authentication-modal">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="px-6 py-6 lg:px-8">
                <h3 class="mb-4 text-xl font-medium text-gray-900 gilroy-bold">Crear perfil de desarrollador</h3>
                <div class="space-y-6">


                    <div>

                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-900">Tu nombre</label>
                            <input @onkeypress="()=>{ CreateProfileMessage = string.Empty; }" @bind="BindNameProfile" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="¿Cual es tu apodo de desarrollador?" required>
                        </div>

                        <div>
                            <label class="mt-2 block mb-2 text-sm font-medium text-gray-900">Contraseña</label>
                            <input type="password" placeholder="Contraseña que usas en tu cuenta" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                        </div>

                    </div>


                    <button @onclick="CrearProfile" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Crear perfil de desarrollador</button>


                    <label class="block text-center error">@CreateProfileMessage</label>

                </div>
            </div>
        </div>
    </div>
</div>

@code{
    /// <summary>
    /// Genera el perfil de desarrollador
    /// </summary>
    async void CrearProfile()
    {

        if (BindNameProfile.Length == 0)
        {
            CreateProfileMessage = "Completa el nombre";
            return;
        }

        var modelo = new ProfileDataModel()
            {
                Description = $"Hola, soy {LIN.Access.Sesion.Instance.Informacion.Nombre}",
                Name = LIN.Access.Sesion.Instance.Informacion.Nombre,
                UserID = LIN.Access.Sesion.Instance.Informacion.ID
            };

           
        var result = await LIN.Access.Developer.Controllers.Profile.Generate(modelo);

        // Correcto
        if (result.Response == LIN.Shared.Responses.Responses.Success)
        {

            var loginDev = await LIN.Access.Developer.Sesion.LoginWith(LIN.Access.Sesion.Instance.Informacion.ID);

            // Iniciar sesion dev 
            await JS.InvokeVoidAsync("ForceClick", $"aut-close");
            await OnSuccessCreate.InvokeAsync();
           
            return;
        }
        else
        {
            CreateProfileMessage = "Hubo un error";
        }


    }
}