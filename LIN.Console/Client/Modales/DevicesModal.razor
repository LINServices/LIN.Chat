@inject IJSRuntime JS


@code {

    [Parameter]
    public string ID { get; set; }

    [Parameter]
    public string Latitud { get; set; }

    [Parameter]
    public string Longitud { get; set; }

    [Parameter]
    public DeviceModel Modelo { get; set; }

}

@{
    string cadena = $"http://linmaps.somee.com/mapa/light/{Longitud.Replace(',', '.')}/{Latitud.Replace(',', '.')}/pk.nG1P6Y7lEGTZrsdawGN8T1lsDofolu5UuOZF";
}



<div id="MapaModal-@ID" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-md max-h-full">

        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow">
            <button id="aut-close-@ID" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-modal-hide="authentication-modal">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="px-6 py-6 lg:px-8">

                <h3 class="mb-4 text-xl font-medium text-gray-900 gilroy-bold">@Modelo.Name</h3>

                <div class="mb-3 flex flex-row items-center">
                    @if (Modelo.Platform == Platforms.Windows)
                    {
                        <img class="h-6 w-6" src="./img/windows_logo.png" />
                    }
                    else if (Modelo.Platform == Platforms.Android)
                    {
                        <img class="h-6 w-6" src="./img/telefono.png" />
                    }
                    else if (Modelo.Platform == Platforms.Web)
                    {
                        <img class="h-6 w-6" src="./img/web.png" />
                    }
                    else
                    {
                        <img class="h-6 w-6" src="./img/device.png" />
                    }

                    <div class="flex flex-col ml-2">
                        <label class="text-sm gilroy-bold">@Modelo.Platform</label>
                        <label  style="font-size: 10px; margin-top: -2px">@Modelo.OsVersion</label>
                    </div>
                    


                </div>

                <label>Bateria: @Modelo.BateryLevel%</label>
                <div class="w-56 bg-gray-200 rounded-full h-4">
                    <div class="bg-blue-600 h-4 rounded-full" style="width: @Modelo.BateryLevel%"></div>
                </div>

                <div class="space-y-6 mt-5">
                    <div>
                        <iframe class="h-60 w-full rounded-xl" src="@cadena"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
