@* 

<div id="contact-modal-@Key" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow">

            <button id="contact-close-btn-A12" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Close modal</span>
            </button>

            <div class="flex flex-col p-6 text-center justify-center items-center">

                @if (Img64.Length <= 0)
                {
                    char letter = 'A';
                    if (Modelo.Name.Length>0)
                    {
                         letter = Modelo.Name[0];
                    } 
                   
                    <div class="flex w-12 h-12 p-1 rounded-full ring-2 ring-gray-300 items-center justify-center">
                            <label class="gilroy-bold">@letter</label>
                        </div>
                }
                else
                {
                    <img class="w-12 h-12 p-1 rounded-full ring-2 ring-gray-300" src="data:image/png;base64,@Img64">
                }


                <h3 class="text-lg text-gray-700 mt-2 gilroy-bold">@Modelo.Name</h3>


                <div class="flex flex-row mt-4 p-2 w-full bg-gray-200 rounded-lg items-center">
                    <img class="ml-3 h-5 w-5" src="./img/email.png" />
                    <h3 class="ml-2 text-base text-gray-500">@Modelo.Mail</h3>
                </div>

                <div class="flex flex-row mt-2 p-2 w-full bg-gray-200 rounded-lg items-center">
                    <img class="ml-3 h-5 w-5" src="./img/phone.png" />
                    <h3 class="ml-2 text-base text-gray-500">@Modelo.Phone</h3>
                </div>

                <div class="flex flex-row mt-2 p-2 w-full bg-gray-200 rounded-lg items-center">
                    <img class="ml-3 h-5 w-5" src="./img/directions.png" />
                    <h3 class="ml-2 text-base text-gray-500">@Modelo.Direction</h3>
                </div> 


            </div>
        </div>
    </div>
</div>


